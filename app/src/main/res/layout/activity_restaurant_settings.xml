<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantSettings">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/relative_layout_1"
                android:layout_height="200dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@color/colorPrimary">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_build_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/iv_settings_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_settings_icon"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="15sp"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_restaurant_owner_settings_menu"
                    android:text="Settings"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relative_layout_1"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/linear_layout_1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_account_circle_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change User Name"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_user_name_change"
                        android:fontFamily="sans-serif"
                        android:textColor="#000000"

                        android:textSize="22sp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_change_user_name"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_layout_1"
                    android:id="@+id/linear_layout_2"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_lock_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_user_password_change"
                        android:fontFamily="sans-serif"
                        android:textColor="#000000"
                        android:textSize="22sp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_change_user_password"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_layout_3"
                    android:layout_below="@+id/linear_layout_2"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_add_location_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Location"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_user_location_change"
                        android:fontFamily="sans-serif"
                        android:textColor="#000000"
                        android:textSize="22sp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_change_location"
                        android:background="@android:color/transparent"/>


                </LinearLayout>





            </RelativeLayout>

        </RelativeLayout>



    </ScrollView>

</RelativeLayout>